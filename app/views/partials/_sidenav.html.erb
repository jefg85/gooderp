
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <a href="index.html" class="site_title"><i class="fa fa-paw"></i> <span>GoodERP</span></a>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%= gravatar_image_tag(current_usuario.email, { alt: current_usuario.email, class: 'img-circle profile_img' }) %>
        </div>
        <div class="profile_info">
          <span>Bienvenido,</span>
          <h2>
            <% if usuario_signed_in? %>
                <%= current_usuario.nombres + ' ' + current_usuario.apellidos %>
            <% end %>
          </h2>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

