<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Consulta de Cuentas Activas (<%= @cuentas.length %>)</h3>
      </div>
      <div class="title_right">
        <div class="pull-right">
          <h3>Total: (<%= @monto_total %>)</h3>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="row">
              <div class="col-md-7 col-sm-7 col-xs-7">
                <form id="form_buscar" action="/facturacion/consulta_pedidos/index" class="form-horizontal form-label-left">
                  <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-3">
                      <%= select_tag 'agrupador', options_for_select(@agrupador_cliente.collect {|a| [ a[:nombre], a[:id] ] }),{ include_blank: true, class: 'form-control' } %>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-3">
                      <input type="submit" value="Buscar" class="btn btn-primary"/>
                    </div>
                  </div>
                </form>
              </div>
              <div class="col-md-5 col-sm-5 col-xs-5">
                <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="pull-right">
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
            <table id="cuentas" class="table table-striped table-hover">
              <thead>
              <tr>
                <th style="width: 70%">Cliente</th>
                <th style="width: 15%">Cantidad de Pedidos</th>
                <th style="width: 15%">Total</th>
                <th style="width: 15%">Imprimir</th>
              </tr>
              </thead>
              <tbody>
              <% @cuentas.each do |c| %>
                  <tr>
                    <td>
                      <a href="/facturacion/cuentas_activas/detalle?id=<%=c.id%>">
                      <%= c.nombre_cliente  %>
                      </a>
                    </td>
                    <td>
                      <%= c.cantidad_pedido  %>
                    </td>
                    <td>
                      <%= c.monto_cuenta  %>
                    </td>
                    <td>
                      <%= form_tag('/facturacion/cuentas_activas/imprimir_cuenta', target: '_blank', method: 'post', id: 'frm_imprimir_cuenta')do %>
                          <input type="hidden" name="id" value="<%=c.id%>"/>
                          <input type="submit" value="Imprimir" class="btn btn-primary"/>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
