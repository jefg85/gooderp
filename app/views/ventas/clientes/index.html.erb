<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Clientes</h3>
      </div> 
      <div class="title_right">
      </div>          
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="pull-right">
              <%= link_to 'Nuevo', new_ventas_cliente_path, {class: 'btn btn-success'} %> 
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
            <table id="clientes" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Apellidos</th>
                  <th>Nombres</th>                  
                  <th>Sexo</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
                <% @ventas_clientes.each do |ventas_cliente| %>
                <tr>
                  <td>
                    <a href="/ventas/clientes/<%= ventas_cliente.id %>">
                      <%= ventas_cliente.primer_apellido %> <%= ventas_cliente.segundo_apellido %>
                    </a>
                  </td>
                  <td>
                    <a href="/ventas/clientes/<%= ventas_cliente.id %>">
                      <%= ventas_cliente.primer_nombre %> <%= ventas_cliente.segundo_nombre %></td>
                    </a>
                    <td>
                      <a href="/ventas/clientes/<%= ventas_cliente.id %>">
                        <%= ventas_cliente.sexo %>
                      </a>
                    </td>
                    <td>
                      <a href="/ventas/clientes/<%= ventas_cliente.id %>">
                        <%= ventas_cliente.email %>
                      </a>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @ventas_clientes %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /page content -->

