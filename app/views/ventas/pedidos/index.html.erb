<p id="notice"><%= notice %></p>

<h1>Listing Ventas Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ventas_pedidos.each do |ventas_pedido| %>
      <tr>
        <td><%= ventas_pedido.fecha %></td>
        <td><%= ventas_pedido.cliente_id %></td>
        <td><%= link_to 'Show', ventas_pedido %></td>
        <td><%= link_to 'Edit', edit_ventas_pedido_path(ventas_pedido) %></td>
        <td><%= link_to 'Destroy', ventas_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

