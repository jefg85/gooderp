<%= stylesheet_link_tag    'datatables', media: 'all' %>
<%= javascript_include_tag 'datatables' %>
<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Productos</h3>
      </div> 
      <div class="title_right">
      </div>          
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="pull-right">
              <%= link_to 'Nuevo', new_inventario_producto_path, {class: 'btn btn-success'} %> 
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
            <table id="productos" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Precio</th>                  
                </tr>
              </thead>
              <tbody>
                <% @inventario_productos.each do |inventario_producto| %>
                <tr>
                  <td>
                    <a href="/inventario/productos/<%= inventario_producto.id %>">
                      <%= inventario_producto.nombre %>
                    </a>
                  </td>
                  <td>
                    <a href="/inventario/productos/<%= inventario_producto.id %>">
                      <%= inventario_producto.precio %>
                    </a>
                    </td>                   
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /page content -->
  <script type="text/javascript">

    $(document).ready(function() {
      var handleDataTableButtons = function() {
        if ($("#productos").length) {
          $("#productos").DataTable({
            language: dataTables_spanish,
            dom: "Bfrtip",
            buttons: [
            {
              extend: "pdfHtml5",
              className: "btn-sm"
            }
            ],
            responsive: true
          });
        }
      };

      TableManageButtons = function() {
        "use strict";
        return {
          init: function() {
            handleDataTableButtons();
          }
        };
      }();

      TableManageButtons.init();

    });
  </script>


